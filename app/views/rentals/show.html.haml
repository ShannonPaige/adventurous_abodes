.black-text
  .center-align
    %h1= @rental.name

    .waves-effect.waves-light.btn.white-text
      = get_purchase_link_or_retired_notice

  %p.center-align= "Trip price: #{format_currency(@rental.price)}"

  %br

  .row
    .col.s4
      = image_tag(@rental.image.url, class: "responsive-img")
    .col.s8
      %p.rental-description= @rental.description
