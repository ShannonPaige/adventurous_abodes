<div class="black-text">
  <div class="center-align">
    <h1>
      <%= @rental.name %>
    </h1>
  <br/>
  <div class="row">
    <div class="col s4">
      <div class="card">
            <div class="card-image">
              <%= image_tag(@rental.image.url, class: "responsive-img") %>
            </div>
          </div>
    </div>
    <div class="col s8">
      <div class="card-panel ">
        <p>Owner:
          <%= @rental.owner.name %>
        </p>
         <span class="black-text">
           <p>Description:
            <%= @rental.description %>
           </p>
            <p class="center-align">
              <%= "Trip price: #{format_currency(@rental.price)}" %>
            </p>
              <% if @rental.status == "inactive" %>
              <div class="btn disabled">
                Unavailable
              </div>
              <% else %>
                <div class="waves-effect waves-light btn white-text">
                  <%= get_purchase_link_or_retired_notice %>
                </div>
              <% end %>
          </div>
         </span>
       </div>
      </p>
    </div>
  </div>
</div>
