<div class="cart white">
  <table>
    <% @rentals.each do |rental_parts| %>
      <% rental     = rental_parts[0] %>
      <% start_date = rental_parts[1] %>
      <% end_date   = rental_parts[2] %>

      <% "#{start   = Date.strptime(rental_start_date(start_date), '%b %d %Y')}" %>
      <% "#{enddate = Date.strptime(rental_end_date(end_date),    '%b %d %Y')}" %><br>
      <% "#{nights  = (enddate - start).to_i}" %>

      <div class="rental_card">
        <tr>
          <div class="row">
            <div class="col s3">
              <%= image_tag(rental.image.url, class: "responsive-img") %>
            </div>
            <div class="col s6">
              <h2><%= rental.name %></h2>
              <p><%= rental.description %></p>
              <p><%= "Price: #{format_currency(rental.price)}" %></p>
              <p><%= "Dates: #{start_date} - #{end_date}" %></p>
              <p><%= "Number of Nights: #{nights}" %><br></p>
              <p><%= "Sub-total: #{format_currency(rental.price.to_i * nights)}" %></p>
            </div>
            <div class="col s2">
              <br/>
              <br/>
              <br/>
              <div class="waves-effect waves-light btn white-text">
                <%= button_to "Remove", cart_path( { rental_id: rental.id }), method: :delete %>
              </div>
            </div>
          </div>
        </tr>
      </div>
    <% end %>
  </table>
</div>
