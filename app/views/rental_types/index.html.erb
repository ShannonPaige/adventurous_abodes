<h1 class="black-text">Rentals</h1>
<div class="row">
  <!-- Dropdown Trigger -->
  <a class='dropdown-button btn' href='#' data-activates='dropdown1'>Where Do you Want to Stay??</a>

  <ul id='dropdown1' class='dropdown-content'>
    <% @rental_types.each do |rental_type| %>
      <li><%= link_to rental_type.name.pluralize, rental_type_path(slug: rental_type.slug) %></li>
    <% end %>
  </ul>


  <div class="col m4">
    <div class="card medium">
        <li><%= link_to rental_type.name.pluralize, rental_type_path(slug: rental_type.slug), class: "btn" %>
      <div class="card-image waves-effect waves-block waves-light">
        <%= image_tag "house-06.jpg" %>
      </div>
      <div class="card-content">
        <span class="card-title item-title activator grey-text text-darken-4">
        <%= link_to rental_type.name.pluralize, rental_type_path(slug: rental_type.slug), class: "btn" %>
        </span>
      </div>
  </div>
</div>
</div>
