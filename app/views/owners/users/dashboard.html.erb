<div class="center-align">
  <h1 class="section">Owner Dashboard</h1>

  <div class="waves-effect waves-light btn">
    <%= link_to "Edit Account", edit_user_path(@user) %>
  </div>
  <div class="waves-effect waves-light btn">
    <%= link_to "Delete Account", user_path(@user), method: :delete %>
  </div>
  <br/>
  <br/>
  <div class="waves-effect waves-light btn">
    <%= link_to "View All Rentals", owners_rentals_path %>
  </div>
  <div class="waves-effect waves-light btn">
    <%= link_to "View Orders", owners_orders_path %>
  </div>
  <div class="waves-effect waves-light btn">
    <%= link_to "Add Rental",  new_owners_rental_path %>
  </div>
</div>

<div class="center-align section">
  <h2>Rentals</h2>

  <div class="row">
    <% @owner.rentals.each do |rental| %>
      <%= render partial: "rentals/rental", locals: { :rental => rental } %>
    <% end %>
  </div>
</div>
