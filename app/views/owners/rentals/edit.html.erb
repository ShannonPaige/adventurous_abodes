<h1 class="center-align">Update Rental</h1>
<div>
  <%= form_for(@rental, url: owners_rental_path) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <%= f.label :price %>
    <%= f.text_field :price %>
    <%= f.label :status %>
    <%= f.text_field :status %>
    <%= f.label :image, "Attach an Image" %>
    <%= f.file_field :image %>
    <div class="waves-effect waves-light btn">
      <%= f.submit "Update Rental" %>
    </div>
  <% end %>
</div>
