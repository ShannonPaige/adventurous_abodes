%h1.black-text.center-align Update Rental

.black-text
  = form_for(@rental, url: owners_rental_path) do |f|
    = f.label :name
    = f.text_field :name
    = f.label :description
    = f.text_area :description
    = f.label :price
    = f.text_field :price
    = f.label :status
    = f.text_field :status
    = f.label :image, "Attach an Image"
    = f.file_field :image
    .waves-effect.waves-light.btn
      = f.submit "Update Rental"
