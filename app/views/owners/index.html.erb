<h2 class="center-align">All Property Owners</h2>

 <div class="row">
  <% @owners.each do |owner| %>
    <div class="col s2">
      <div class="card small">
        <div class="card-image waves-effect waves-block waves-light">
          <img src="https://robohash.org/<%= owner.name%>.png" alt="" class="circle">
        </div>
        <div class="card-content center-align">
          <%= link_to "View #{owner.name.pluralize} properties", owner_path(owner)%>
        </div>
      </div>
    </div>
  <% end %>
 </div>
